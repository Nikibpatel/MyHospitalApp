<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospital_module.h_reg">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/hospital_building"
        android:scaleType="centerCrop"
        android:alpha="0.6"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_h_name"
            android:hint="Hospital Name"
            android:textSize="30dp"
            android:textColorHint="#e127b8"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_h_email"
            android:hint="Enter Email"
            android:textSize="30dp"
            android:textColorHint="#e127b8"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_h_password"
            android:hint="Enter Email"
            android:textSize="30dp"
            android:textColorHint="#e127b8"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_h_contact"
            android:hint="Enter Contact"
            android:textSize="30dp"
            android:textColorHint="#e127b8"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_h_address"
            android:hint="Enter Address"
            android:textSize="30dp"
            android:textColorHint="#e127b8"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_h_city"
            android:hint="Enter City"
            android:textSize="30dp"
            android:textColorHint="#e127b8"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_h_area"
            android:hint="Enter Area"
            android:textSize="30dp"
            android:textColorHint="#e127b8"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_registration"
            android:text="Registration"
            android:textColor="#e127b8"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="#000"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>


        </LinearLayout>

    </LinearLayout>

    </FrameLayout>

