<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hospital_module.h_login">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/h_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_image" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:src="@mipmap/hospital_icon" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Hospital"
                android:textAlignment="center"
                android:textColor="#e724a6"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/h_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Enter Email-id"
                android:padding="30dp"
                android:textColorHint="#e724a6" />


            <EditText
                android:id="@+id/h_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Enter Password"
                android:padding="30dp"
                android:textColorHint="#e724a6" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#e724a6"
                android:padding="15dp"
                android:id="@+id/btn_login"
                android:background="#000"
                android:layout_margin="40dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click here for new Registration"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvregister"
                />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>

